<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naseem.pdemo.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/nestdscrolview"
        android:fillViewport="true"
        android:background="@color/gray"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.naseem.priceomania1.ScrollingActivity"
        tools:showIn="@layout/app_bar_main">

        <ScrollView
            android:id="@+id/scrolview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout android:id="@+id/re1"
                android:background="#DFDFDF"
                android:layout_width="match_parent"
                android:layout_height="170dp">


                <android.support.v4.view.ViewPager
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"

                    android:id="@+id/viewpager">
                </android.support.v4.view.ViewPager>



                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/SliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                </LinearLayout>


            </RelativeLayout>


        <TextView
            android:id="@+id/snap1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/re1"
            android:text="Featured Products"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview1"
                    android:layout_marginTop="5dp"
                     android:layout_below="@+id/snap1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/snap2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/recyclerview1"
            android:text="Apple iPhones"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/snap2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/snap3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/recyclerview2"
            android:text="Cameras"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview3"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/snap3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/snap4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="3dp"
            android:layout_below="@+id/recyclerview3"
            android:text="Tablets"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview4"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/snap4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>



        <TextView
            android:id="@+id/snap5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/recyclerview4"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:text="Categories"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />


        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/snap5"
            android:layout_marginBottom="20dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



              <!--Categories-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview5"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </android.support.v7.widget.CardView>

            </RelativeLayout>



        </ScrollView>




    </android.support.v4.widget.NestedScrollView>





</RelativeLayout>
