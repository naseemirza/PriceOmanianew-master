<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/nestdscrolview"
    android:fillViewport="true"
android:background="#ffff"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naseem.pdemo.CardDetailsPkg.TabActivity1"
     >

    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cardimg"
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_centerHorizontal="true" />


                <!--<android.support.v4.view.ViewPager-->
                    <!--android:id="@+id/viewpager"-->
                    <!--android:layout_width="wrap_content"-->

                    <!--android:layout_height="170dp"></android.support.v4.view.ViewPager>-->


                <!--<LinearLayout-->
                    <!--android:id="@+id/SliderDots"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginTop="4dp"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:orientation="horizontal"></LinearLayout>-->


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_below="@+id/cardimg"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/mobilenametext"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Mobile name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <!--<TextView-->

                <!--android:text="rating"-->
                <!--android:id="@+id/ratingtext"-->


                <!--android:gravity="center"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="25dp" />-->

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/ratingBarID"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/spacecraftImage"
                    android:layout_alignParentRight="true"
                    app:srb_borderColor="#474700"
                    app:srb_fillColor="#474700"
                    app:srb_numberOfStars="5"
                    app:srb_rating="3.5"
                    app:srb_starSize="20dp"
                    app:srb_stepSize="0.01" />

                <android.support.v7.widget.CardView
                    android:id="@+id/optioncard"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttob_border"
                    app:cardBackgroundColor="@color/gray">

                    <TextView
                        android:id="@+id/mcolor"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="45dp"
                        android:gravity="start|center_vertical"
                        android:text="Black"
                        android:textColor="@color/purple"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coma1"
                        android:layout_width="5dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="85dp"
                        android:text=","
                        android:textColor="@color/purple"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mmemory"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="95dp"
                        android:gravity="start|center_vertical"
                        android:text="64 GB"
                        android:textColor="@color/purple"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coma2"
                        android:layout_width="5dp"
                        android:layout_height="20dp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="140dp"
                        android:text=","
                        android:textColor="@color/purple"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mnetwork"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="160dp"
                        android:gravity="start|center_vertical"
                        android:text="LTE"
                        android:textColor="@color/purple"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/arrow"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="110dp"
                        android:text=">"
                        android:textColor="@color/purple"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </android.support.v7.widget.CardView>


                <!--<Button-->
                <!--android:background="@drawable/buttob_border"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/colorbutton"-->
                <!--android:textColor="@color/purple"-->
                <!--android:layout_gravity="center"-->
                <!--android:textAllCaps="false"-->
                <!--android:text="Colors, Storage, Networks >"-->
                <!--android:layout_width="220dp"-->
                <!--android:layout_height="30dp" />-->

                <TextView

                    android:id="@+id/priceText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="price"
                    android:textColor="#ffff"
                    android:textSize="20dp" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/linear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/li1"
                    android:layout_width="match_parent"

                    android:layout_height="82dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li2"
                        android:layout_width="190dp"
                        android:layout_height="59dp"
                        android:layout_gravity="top|start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/siteTextview"
                            android:layout_width="match_parent"

                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:text="Souq"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/mobilename"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"

                            android:layout_marginStart="10dp"
                            android:text="Apple iPhone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li3"

                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageview"

                            android:layout_width="164dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/souqimg" />

                    </LinearLayout>
                </LinearLayout>



            </android.support.v7.widget.CardView>

            <!--<include-->
                <!--android:layout_below="@+id/card1"-->
                <!--android:id="@+id/inclayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--layout="@layout/layout_parent" />-->



            <iammert.com.expandablelib.ExpandableLayout
                android:id="@+id/el"
                android:layout_below="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:childLayout="@layout/layout_child"
                app:parentLayout="@layout/layout_parent" />





            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_below="@+id/el"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardviewText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/recyclerview"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center|start"
                    android:text="Popular Apple Products"
                    android:textAllCaps="false"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="300dp"
                    android:gravity="center"
                    android:text=">"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/cardviewText1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/cardviewText">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center|start"
                    android:text="Popular Apple Mobile Phones"
                    android:textAllCaps="false"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="300dp"
                    android:gravity="center"
                    android:text=">"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>




        </RelativeLayout>




    </ScrollView>

</android.support.v4.widget.NestedScrollView>
