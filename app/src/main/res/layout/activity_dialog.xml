<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:card_view="http://schemas.android.com/tools"
    tools:context="com.example.naseem.pdemo.CardDetails.DialogActivity">


<RelativeLayout
    android:id="@+id/re1"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:gravity="start|center"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Options" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="See All Options" />

        <TextView
            android:text=">"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/re3"
        android:layout_below="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textcolor"
            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Color" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Black"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:text=">"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="70dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re4"
        android:layout_below="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView

            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Capacity" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="64 GB"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:text=">"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re5"
        android:layout_below="@+id/re4"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView

            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Brand" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="LTE"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:text=">"
            android:textSize="25dp"
            android:gravity="center"
           android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="340dp"
        android:gravity="center"
        android:layout_marginEnd="35dp"
        android:textColor="@color/colorWhite"

        android:background="@color/colorPrimary"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/re5"
        android:textAllCaps="false"
        android:text="Apply" />
</RelativeLayout>
