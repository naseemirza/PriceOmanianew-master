<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardfull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="3dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/mainlinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nameimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/namecmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="name"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/souq" />
            </LinearLayout>

            <TextView
                android:id="@+id/prodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="productname" />

            <TextView
                android:id="@+id/moreeoption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="+More Options"
                android:textColor="@color/purple"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/priceli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/li121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/crncytext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:clickable="true"
                        android:text="AED"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pricetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:clickable="true"
                        android:text="price"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linrtextmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texviewtmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="MoreInfo"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonsite1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/green"
                        android:clickable="false"
                        android:text="Go to site"
                        android:textAllCaps="false"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="155dp"
            android:background="#FFF"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lidelvry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textdlvry"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:text="Delivery" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center_vertical"
                    android:text="within 4-13 working days" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textwrnty"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:text="Warranty" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center_vertical"
                    android:text="1 year since date of purchase" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textship"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:text="Shipping" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:text="Same Day in India/Noida for Orders before 6:30pm" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textnotes"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:text="Notes" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"

                    android:text="+2.5% fee for payment by creadit card, No Extra charge on COD, Prices includeVAT" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linrless"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lesstext"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:text="LessInfo"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>